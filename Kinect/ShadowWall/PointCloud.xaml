<Window x:Class="ShadowWall.PointCloud"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ShadowWall"
		mc:Ignorable="d"
		Title="PointCloud">
	<Grid x:Name="KinectGrid" Background="Black">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Button Grid.Row="0" x:Name="recordButton" Click="recordButton_Click" Content="{Binding RecordButtonContent}" />
		<Image x:Name="DepthImage" Grid.Row="1"/>
	</Grid>
</Window>
